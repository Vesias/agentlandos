# AGENTLAND.SAARLAND - Production Environment Example
# ====================================================
# Copy this file to `.env.production` and fill in your production secrets.
# Do NOT commit actual credentials.

# -----------------
# SUPABASE CONFIG
# -----------------
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Database URLs
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=

# -----------------
# AI PROVIDERS
# -----------------
DEEPSEEK_API_KEY=
DEEPSEEK_API_URL=https://api.deepseek.com/v1
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEFAULT_AI_MODEL=deepseek-chat
GOOGLE_AI_API_KEY=

# -----------------
# APPLICATION CONFIG
# -----------------
NEXT_PUBLIC_APP_URL=https://agentland.saarland
NEXT_PUBLIC_API_URL=/api
NEXTAUTH_URL=https://agentland.saarland
NEXTAUTH_SECRET=
NODE_ENV=production
NEXT_PUBLIC_VERCEL_ENV=production

# -----------------
# AUTHENTICATION
# -----------------
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------
# PAYMENT & REVENUE
# -----------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------
# EMAIL & COMMUNICATION
# -----------------
EMAIL_FROM=noreply@agentland.saarland
EMAIL_API_KEY=

# -----------------
# MONITORING & ANALYTICS
# -----------------
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# -----------------
# EXTERNAL APIS
# -----------------
SAARLAND_TOURISM_API_KEY=
SAARVV_API_KEY=
OPENWEATHER_API_KEY=

# -----------------
# REGIONAL SETTINGS
# -----------------
DEFAULT_LANGUAGE=de
SUPPORTED_LANGUAGES=de,fr,en
SAARLAND_DIALECT_ENABLED=true

# -----------------
# SECURITY
# -----------------
REDIS_URL=redis://localhost:6379
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60
MAX_REQUESTS_PER_MINUTE=100
ALLOWED_ORIGINS=https://agentland.saarland,https://www.agentland.saarland
BACKEND_CORS_ORIGINS=https://agentland.saarland,https://www.agentland.saarland
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# -----------------
# FEATURES FLAGS
# -----------------
FEATURE_REFERRAL_SYSTEM=true
FEATURE_PREMIUM_SUBSCRIPTIONS=true
FEATURE_CROSS_BORDER_SERVICES=true
FEATURE_CLAUDE_CREW=true

# Development
DEBUG=false
VERBOSE_LOGGING=false
SKIP_ENV_VALIDATION=false
